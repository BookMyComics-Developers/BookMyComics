{
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [ "error", 4, {
            "CallExpression": { "arguments": "first" },
            "ObjectExpression": "first"
        }],
        "linebreak-style": [ "error", "unix" ],
        "no-console": "warn",
        "quotes": [ "error", "single" ],
        "semi": [ "error", "always" ]
    }
}
