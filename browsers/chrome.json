{
    "name": "BookMyComics",
    "version": "0.1",
    "description": "A slightly intrusive extension to keep track of your comics/manga reading progress",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "strings.js",
            "utils.js",
            "compat.js",
            "engine/utils.js",
            "engine/messaging.js",
            "support/mangafox.js",
            "support/mangahere.js",
            "support/manganelo.js",
            "support/mangakakalot.js",
            "sources.js",
            "background-engine.js"
        ]
    },
    "content_scripts": [
        {
            "matches": ["*://manganelo.com/*"],
            "js": [
                "strings.js",
                "utils.js",
                "compat.js",
                "engine/utils.js",
                "engine/storage.js",
                "engine/datamodel.js",
                "engine/messaging.js",
                "engine/ui.js",
                "engine/bookmycomics.js",
                "sources.js",
                "support/manganelo.js",
                "entrypoint.js"
            ],
            "all_frames": true
        },
        {
            "matches": ["*://fanfox.net/*"],
            "js": [
                "strings.js",
                "utils.js",
                "compat.js",
                "engine/utils.js",
                "engine/storage.js",
                "engine/datamodel.js",
                "engine/messaging.js",
                "engine/ui.js",
                "engine/bookmycomics.js",
                "sources.js",
                "support/mangafox.js",
                "entrypoint.js"
            ],
            "all_frames": true
        },
        {
            "matches": ["http://mangahere.us/*"],
            "js": [
                "strings.js",
                "utils.js",
                "compat.js",
                "engine/utils.js",
                "engine/storage.js",
                "engine/datamodel.js",
                "engine/messaging.js",
                "engine/ui.js",
                "engine/bookmycomics.js",
                "sources.js",
                "support/mangahere.js",
                "entrypoint.js"
            ],
            "all_frames": true
        },
        {
            "matches": ["*://mangakakalot.com/*"],
            "js": [
                "strings.js",
                "utils.js",
                "compat.js",
                "engine/utils.js",
                "engine/storage.js",
                "engine/datamodel.js",
                "engine/messaging.js",
                "engine/ui.js",
                "engine/bookmycomics.js",
                "sources.js",
                "support/mangakakalot.js",
                "entrypoint.js"
            ],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        "sidebar.html",
        "strings.js",
        "utils.js",
        "compat.js",
        "engine/utils.js",
        "engine/storage.js",
        "engine/datamodel.js",
        "engine/messaging.js",
        "engine/ui.js",
        "engine/bookmycomics.js",
        "scripts/*",
        "support/*"
    ],
    "permissions": [
        "activeTab",
        "storage"
    ]
}
