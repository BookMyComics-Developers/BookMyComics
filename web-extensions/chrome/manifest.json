{
    "name": "BookMyComics",
    "version": "0.1",
    "description": "A slightly intrusive extension to keep track of your comics/manga reading progress",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["https://www.mangaeden.com/en/en-manga/*"],
            "js": ["engine/storage.js", "support/mangaeden.js"]
        },
        {
            "matches": ["*://fanfox.net/manga/*"],
            "js": ["engine/storage.js", "support/mangafox.js"]
        },
        {
            "matches": ["*://mangahere.us/*"],
            "js": ["engine/storage.js", "support/mangahere.js"]
        },
        {
            "matches": ["https://www.mangareader.net/*"],
            "js": ["engine/storage.js", "support/mangareader.js"]
        }
    ],
    "permissions": [
      "activeTab",
      "storage"
    ]
}
